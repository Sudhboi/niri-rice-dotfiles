// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    //"height": 30, // Waybar height (to be removed for auto height)
    //"width": 1590, // Waybar width
    "margin-top": 10,
    "margin-left":10,
    "margin-right":10,
    //"margin-bottom": 10,
    // Choose the order of the modules
    "modules-left": [
	//"custom/poweroff",
    "group/power",
    "custom/playpause",
    //"custom/appmenu",
    "niri/workspaces",
    "cava",
	"hyprland/window"
    //"tray"
    ],
    "modules-center": [
	"hyprland/workspaces",
    "niri/window"
    ],
    "modules-right": [
        "network",
        //"idle_inhibitor",
        //"pulseaudio",
        //"backlight",
        //"battery",
	//"custom/weather",
        //"wlr/taskbar",
        "group/apps",
        //"network",
        "group/stats",
        "clock"
    ],
   "hyprland/workspaces": {
	"format": "{name}",
	"format-icons": {
		"active": "ÔÜí",
		"default": "ÔÑë"
	},
       "persistent-workspaces": {
             "*": 0, // 5 workspaces by default on every monitor
             "HDMI-A-1": 3 // but only three on HDMI-A-1
       }
   },
   "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}",
        //"format": "{:%H:%M:%S}",
        //"interval": 1
    },
   "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
        "tooltip": false
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôá¶",
        "format-plugged": "{capacity}% Ó¨≠",
        "format-alt": "{time} {icon}",
        "tooltip-format": "{power} W, {timeTo}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": " ",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        //"tooltip-format": "{ifname} via {gwaddr} ",
        "tooltip-format": "{essid}: {ipaddr}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}: {essid}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "MUT Û∞ùü",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pactl set-sink-mute 0 toggle",
        "tooltip": false
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    //"custom/weather": {
    //    "exec": "${HOME}/.config/waybar/scripts/get_weather.sh Fredericton+Canada",
    //    "return-type": "json",
    //    "format": "{}",
    //    "tooltip": true,
    //    "interval": 3600
    //},
    "custom/poweroff": {
	    "format": "‚èª",
        "on-click": "exec ${HOME}/.config/waybar/scripts/powermenu",
        "tooltip-format": "Power Menu",
        "tooltip": true
    },
    "custom/power": {
        "format" : "‚èª ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/power_menu.xml",
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate",
        },
    },
    "cava": {
        "cava_config": "$XDG_CONFIG_HOME/cava/cava.conf",
        "framerate": 30,
        "autosens": 1,
        "sensitivity": 100,
        "bars": 14,
        "lower_cutoff_freq": 50,
        "higher_cutoff_freq": 10000,
        "hide_on_silence": false,
        // "format_silent": "quiet",
        "method": "pulse",
        "source": "auto",
        "stereo": true,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà" ],
        "actions": {
                   "on-click-right": "mode"
                   }
    },
    "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
    }
    },
    "custom/powerbutton": {
        "format": "‚èª",
        "on-click": "poweroff",
        "tooltip-format": "Power Off"
    },
    "custom/reboot": {
        "format": "Û∞úâ",
        "on-click": "reboot",
        "tooltip-format": "Reboot"
    },
    "custom/suspend": {
        "format": "ÔìÆ",
        "on-click": "systemctl suspend",
        "tooltip-format": "Suspend"
    },
    "custom/lock": {
        "format": "Û∞çÅ",
        "on-click": "hyprlock",
        "tooltip-format": "Lock"
    },
    "custom/idlekiller": {
        "format": "ÔÅÆ",
        "on-click": "pkill hypridle || hypridle",
        "tooltip-format": "Inhibit Idle"
    },
    "group/power": {
        "modules": [
            "custom/powerbutton",
            "custom/reboot",
            "custom/suspend",
            "custom/lock",
            "custom/idlekiller",
            "user",
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500
        }
    },
    "group/stats": {
        "modules": [
            "battery",
            "group/brightness",
            "group/audio"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 750,
            "transition-left-to-right": false
        }
    },
    "custom/appmenu": {
        "format": "Û∞Äª",
        "on-click": "rofi -show drun -theme appmenu.rasi",
        "tooltip": false
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "on-click": "activate",
        "on-click-right": "close"
    },
    "group/apps": {
        "modules" : [
            "custom/appmenu",
            "wlr/taskbar"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": false
        }
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },
    "backlight/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal",
    },
    "group/audio": {
        "modules" : [
            "pulseaudio",
            "pulseaudio/slider"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": true
        }
    },
    "group/brightness": {
        "modules" : [
            "backlight",
            "backlight/slider"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": true
        }
    },
    "user": {
        "format": "{work_H}:{work_M}:{work_S} ‚Üë",
        "interval": 60,
    },
    "niri/window": {
        "tooltip": false
    },
    "custom/playpause": {
        "format": "Û∞êé",
        "on-click": "playerctl play-pause",
        "tooltip": false
    }
}
